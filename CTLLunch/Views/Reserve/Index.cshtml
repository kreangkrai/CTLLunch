@section Scripts
{
    <script type="text/javascript">
        let menus = [];
        var table_reserve;
        var table_reserve_all;
        var table_summary_order;
        let g_shop_id = "";
        let g_menu_id = "";
        let menus_addon = [];
        let g_group_menus = [];
        let g_extra_menu = [];
        let g_datas = [];
        $(document).ready(async function () {
            await GetDataReserveEmployee();
        });

        $('button').click(function () {
            $('button').removeClass("active");
            $(this).addClass("active");
        });

        async function GetDataReserveEmployee() {
            let employee_id = '@Html.Raw(Model.employee_id)';
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetDataReserveEmployee", "Reserve")',
                contentType: 'application/x-www-form-urlencoded',
                data: { employee_id },
                success: function (response) {
                    let reserves = response.reserves_employee;
                    let menus = response.menus;
                    GenerateTableReserve(reserves, menus);
                }
            });
        }

        async function GetDataReserveShop(shop_id) {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetDataReserveShop", "Reserve")',
                contentType: 'application/x-www-form-urlencoded',
                data: { shop_id },
                success: function (response) {
                    let reserves = response.reserves_shop;
                    let menus = response.menus;
                    let group_menus = response.groups;
                    g_group_menus = group_menus;
                    GenerateTableReserveAll(reserves, menus);

                    // Check Close Shop and Show Menu
                    let shops = JSON.parse('@Html.Raw(Json.Serialize(shops))').filter(f => f.shop_id === shop_id).map(m => m)[0];
                    let date = (parseInt(shops.close_time.split(':')[0]) * 60) + parseInt(shops.close_time.split(':')[1]);
                    let now = (new Date().getHours() * 60) + new Date().getMinutes();
                    if (now < date) {
                        let _group_menu = g_group_menus.filter(f => f.group_id !== "G99").map(m => m);
                        ShowMenu(_group_menu);
                    } else {
                        ShowMenu([]);
                    }
                }
            });
        }

        async function Shop_Click(shop_id) {
            g_shop_id = shop_id;

            await GetDataReserveShop(shop_id);
            await GetMenuByShop(shop_id);
            let shops = JSON.parse('@Html.Raw(Json.Serialize(shops))').filter(f => f.shop_id === shop_id).map(m => m)[0];
            $('#shop_menu').html("เมนูอาหาร (" + shops.open_time + "-" + shops.close_time + ")");
        }

        async function GetMenuByShop(shop_id) {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetMenuByShop", "Reserve")',
                contentType: 'application/x-www-form-urlencoded',
                data: { shop_id },
                success: function (response) {
                    let menu = response;
                    menus = menu.menu;
                    GroupSelect(menu.group);
                }
            });
        };

        function GroupSelect(groups) {
            var str = '<option value="" selected disabled>Please Select Job</option>';
            for (var i = 0; i < groups.length; i++) {
                str += '<option value="' + groups[i].group_id + '">' + groups[i].group_id + ": " + groups[i].group_name + '</option>';
            }
            $('#select_group').empty();
            $('#select_group').append(str);
        }

        $('#select_group').on('change', function () {
            let group = $('#select_group').val();
        });

        function ShowMenu(group_menus) {
            let str = ``;
            for (let i = 0; i < group_menus.length; i++) {
                str += `<div class="card card-success collapsed-card">
                                        <div class="card-header">
                                            <span><b>${group_menus[i].group_name}</b></span>
                                            <div class="card-tools">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="container d-flex justify-content-center">
                                                    <div class="col-12 col-xl-8">
                                                    <div class="row">`;
                for (let j = 0; j < group_menus[i].menus.length; j++) {
                    str += `
                                                        <div class="col-12 col-xl-6">
                                                                <div class="row">
                                                                    <div class="col-9 col-xl-9">
                                                                        <input type="radio" name="menu" style="width:20px;height:1em" onclick="SelectMenu('${group_menus[i].menus[j].menu_id}','${group_menus[i].menus[j].menu_name}')" />
                                                                        <label>${group_menus[i].menus[j].menu_name}</label>
                                                                    </div>
                                                                    <div class="col-3 col-xl-3 d-flex justify-content-center">
                                                                        <label>฿${group_menus[i].menus[j].price}</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        `;
                }
                str += `
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>`;
            }

            $('#div_menu').empty();
            $('#div_menu').append(str);
        }
        function ShowExtraMenu(extra_menus) {
            let str = `<div class="row">`;
            if (extra_menus.length > 0) {
                for (let i = 0; i < extra_menus[0].menus.length; i++) {
                    str += ` <div class="col-12 col-md-6 col-xl-6">
                                    <div class="row">
                                        <div class="col-9 col-xl-9">
                                            <input type="checkbox" name="extra_menu" style="width:20px;height:1em" onclick="Select_ExtraMenu(this,'${extra_menus[0].menus[i].menu_id}')" />
                                            <label>${extra_menus[0].menus[i].menu_name}</label>
                                        </div>
                                        <div class="col-3 col-xl-3 d-flex justify-content-end">
                                            <label>+฿${extra_menus[0].menus[i].price}</label>
                                        </div>
                                    </div>
                            </div>`;
                }
                str += `</div>`
                $('#div_extra_menu').empty();
                $('#div_extra_menu').append(str);
            }
        }
        function Select_ExtraMenu(checkbox, menu_id) {
            let checked = checkbox.checked;
            if (checked) {
                g_extra_menu.push(menu_id);
            } else {
                g_extra_menu = g_extra_menu.filter(f => f !== menu_id);
            }
        }

        function GenerateTableReserve(reserves, menus) {
            let datas = [];
            for (let i = 0; i < reserves.length; i++) {
                let extra_price = 0;
                let note_remark = [];
                if (reserves[i].note.trim() !== "") {
                    note_remark.push(reserves[i].note.trim());
                }
                if (reserves[i].remark.trim() !== "") {
                    note_remark.push(reserves[i].remark.trim());
                }
                let _not_remark = note_remark.join(',');
                if (_not_remark.trim() !== "" && _not_remark.trim() !== ",") {
                    _not_remark = " (" + _not_remark + ")";
                } else {
                    _not_remark = "";
                }

                if (reserves[i].extra === true) {
                    extra_price = menus.filter(f => f.menu_id === reserves[i].menu_id).map(m => m.extra_price)[0];
                }
                let status = "";
                if (reserves[i].status === "Pending") {
                    status = "รอชำระเงิน"
                }
                if (reserves[i].status === "Approved") {
                    status = "ชำระเงินแล้ว"
                }
                datas.push([reserves[i].reserve_id,
                reserves[i].reserve_date.split('T')[0] + " " + reserves[i].reserve_date.split('T')[1],
                reserves[i].shop_name,
                reserves[i].menu_name + _not_remark,
                reserves[i].price + extra_price,
                parseFloat(reserves[i].delivery_service_per_person).toFixed(2),
                parseFloat(reserves[i].sum_price + extra_price).toFixed(2),
                    status,
                    ""
                ]);
            }

            // Summary
            let shops = [];
            let _shop = Object.groupBy(reserves, ({ shop_name }) => shop_name);
            for (const [key, value] of Object.entries(_shop)) {
                shops.push(key);
            }
            let length = datas.length;
            for (let i = 0; i < shops.length; i++) {
                let sum_price = 0;
                let sum_delivery = 0;
                let sum = 0;
                for (let j = 0; j < length; j++) {
                    if (shops[i] === datas[j][2]) {
                        sum_price += parseFloat(datas[j][4]);
                        sum_delivery += parseFloat(datas[j][5]);
                        sum += parseFloat(datas[j][6]);
                    }
                }
                datas.push(["รวม", "", shops[i], "", sum_price.toFixed(2), sum_delivery.toFixed(2), sum.toFixed(2), "", ""]);
            }

            if (table_reserve !== undefined) {
                table_reserve.destroy();
            }

            table_reserve = $('#table_reserve').DataTable({
                data: datas,
                columnDefs: [
                    {
                        targets: 0,
                        width: "5%"
                    },
                    {
                        targets: 5,
                        width: "10%",
                        className: "text-center"
                    },
                ],
                rowCallback: function (row, data) {
                    let reserve_no = data[0];
                    let shop = data[2];
                    let menu = data[3];
                    let status = data[7];
                    let shops = JSON.parse('@Html.Raw(Json.Serialize(shops))');
                    let time = shops.filter(f => f.shop_name === shop).map(m => m.close_time)[0];
                    let close = (parseInt(time.substring(0, 2)) * 60) + parseInt(time.substring(3, 5));

                    let date = new Date();
                    let now = (date.getHours() * 60) + date.getMinutes();

                    if (reserve_no !== "รวม" && status === "รอชำระเงิน" && now <= close) {
                        $('td:eq(8)', row).html(`
                                    <button class="btn btn-danger" style="width:80px" onclick="DeleteReserve('${reserve_no}','${menu}')">ลบ
                                    </button>
                             `);
                    } else {
                        $('td', row).css('font-weight', "bold");
                    }
                },
                searching: false,
                paging: false,
                info: false
            });
        }

        async function SelectMenu(menu_id, menu_name) {

            g_extra_menu = [];
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetExtraPriceByMenu", "Reserve")',
                contentType: 'application/x-www-form-urlencoded',
                data: { menu_id },
                success: function (response) {
                    let extra_price = response;
                    $('#extra_price').text("+฿" + extra_price);
                }
            });

            $('#modal_reserve_menu').text(menu_name);
            $('#modal_reserve_menu').css('font-weight', "bold");
            g_menu_id = menu_id;
            let extra_menu = g_group_menus.filter(f => f.group_id === "G99").map(m => m);
            ShowExtraMenu(extra_menu);
            $('#modal_extra').modal();
        }

        function GenerateTableReserveAll(reserves, menus) {
            let datas = [];
            for (let i = 0; i < reserves.length; i++) {
                let extra_price = 0;
                let note_remark = [];
                if (reserves[i].note.trim() !== "") {
                    note_remark.push(reserves[i].note.trim());
                }
                if (reserves[i].remark.trim() !== "") {
                    note_remark.push(reserves[i].remark.trim());
                }
                let _not_remark = note_remark.join(',');
                if (_not_remark.trim() !== "" && _not_remark.trim() !== ",") {
                    _not_remark = " (" + _not_remark + ")";
                } else {
                    _not_remark = "";
                }

                if (reserves[i].extra === true) {
                    extra_price = menus.filter(f => f.menu_id === reserves[i].menu_id).map(m => m.extra_price)[0];
                }

                datas.push([reserves[i].reserve_id,
                reserves[i].reserve_date.split('T')[0] + " " + reserves[i].reserve_date.split('T')[1],
                reserves[i].employee_nickname,
                reserves[i].menu_name + _not_remark,
                reserves[i].price + extra_price,
                parseFloat(reserves[i].delivery_service_per_person).toFixed(2),
                parseFloat(reserves[i].sum_price + extra_price).toFixed(2),
                ]);
            }

            // Summary


            let sum_price = 0;
            let sum_delivery = 0;
            let sum = 0;
            for (let j = 0; j < datas.length; j++) {
                sum_price += parseFloat(datas[j][4]);
                sum_delivery += parseFloat(datas[j][5]);
                sum += parseFloat(datas[j][6]);
            }
            datas.push(["รวม", "", "", "", sum_price.toFixed(2), sum_delivery.toFixed(2), sum.toFixed(2)]);
            g_datas = datas;

            if (table_reserve_all !== undefined) {
                table_reserve_all.destroy();
            }

            table_reserve_all = $('#table_reserve_all').DataTable({
                data: datas,
                columnDefs: [
                    {
                        targets: 0,
                        width: "5%"
                    },
                    {
                        targets: 5,
                        width: "10%",
                        className: "text-center"
                    },
                ],
                rowCallback: function (row, data) {
                    let shops = JSON.parse('@Html.Raw(Json.Serialize(shops))').filter(f => f.shop_id === g_shop_id).map(m => m)[0];
                    let date = (parseInt(shops.close_time.split(':')[0]) * 60) + parseInt(shops.close_time.split(':')[1]);
                    let now = (new Date().getHours() * 60) + new Date().getMinutes();
                    let reserve_no = data[0];
                    if (reserve_no === "รวม") {
                        $('td', row).css('font-weight', "bold");
                    }

                    let role = '@Html.Raw(Model.role)';
                    if (role === "Admin" && datas.length > 1) {
                        if (now > date) {
                            let str = `<div class="row">
                                                <div class="col-12 col-xl-8">
                                                </div>
                                               <div class="col-12 col-xl-2 pt-1 d-flex justify-content-center">
                                                    <button class="btn btn-primary" style="width:150px;font-weight:600" onclick="SummaryReserve('${shops.shop_name}')">สรุปรายการ
                                                    </button>
                                               </div>
                                               <div class="col-12 col-xl-2 pt-1 d-flex justify-content-center">
                                                    <button class="btn btn-warning" style="width:150px;color:white;font-weight:600" onclick="PayReserve('${shops.shop_name}')">ชำระเงิน
                                                    </button>
                                               </div>
                                           </div>`

                            $('#div_btn_shop_reserve').empty();
                            $('#div_btn_shop_reserve').append(str);
                        } else {
                            $('#div_btn_shop_reserve').empty();
                        }
                    } else {
                        $('#div_btn_shop_reserve').empty();
                    }
                },
                searching: false,
                paging: false,
                info: false
            });
        }
        function GenerateTableSummaryOrder(datas) {
            let _datas = [];
            let sum_price = 0;
            let sum_delivery = 0;
            for (let i = 0; i < datas.length - 1; i++) {
                _datas.push([
                    (i + 1),
                    datas[i][2],
                    datas[i][3],
                    datas[i][4],
                    datas[i][5]
                ]);
                sum_price += parseFloat(datas[i][4]);
                sum_delivery += parseFloat(datas[i][5]);
            }
            _datas.push(["รวม", "", "", sum_price.toFixed(2), sum_delivery.toFixed(2)]);

            if (table_summary_order !== undefined) {
                table_summary_order.destroy();
            }
            table_summary_order = $('#table_summary_order').DataTable({
                data: _datas,
                columnDefs: [
                    {
                        targets: 0,
                        className: "text-center"
                    },
                ],
                rowCallback: function (row, data) {
                    let no = data[0];
                    if (no === "รวม") {
                        $('td', row).css('font-weight', "bold");
                    }
                },
                searching: false,
                paging: false,
                info: false
            });
        }
        function SummaryReserve(shop_name) {
            $('#title_summary_order').text(shop_name);
            GenerateTableSummaryOrder(g_datas);
            $('#modal_summary_order').modal();
            //console.log(g_datas);
        }

        function PayReserve(shop_name) {
            let shops = JSON.parse('@Html.Raw(Json.Serialize(shops))');
            let shop = shops.filter(f => f.shop_name === shop_name).map(m => m)[0];
            let qr_code = shop.qr_code;

            let picture = 'data:image/png;base64,' + qr_code;
            if (picture === 'data:image/png;base64,null') {
                document.getElementById('pay_qrcode').src = '@Url.Content("~/images/no-image.png")';
            } else {
                document.getElementById('pay_qrcode').src = picture;
            }

            let bank_account = shop.bank_account;
            let sum_price = g_datas[g_datas.length - 1][6];
            $('#pay_shop_order').text(shop_name);
            $('#pay_shop_bank_account').text("เลขที่บัญชี " + bank_account);
            $('#pay_price_order').text("จำนวน " + sum_price + " บาท");
            $('#modal_pay_order').modal();
        }

        $('#btn_pay_order').on('click', function () {
            $('#modal_confirm_pay').modal();
        });

        $('#btn_confirm_pay_order').on('click', async function () {
            var strs = [];
            for (let i = 0; i < g_datas.length - 1; i++) {
                var str = JSON.stringify({
                    "reserve_id": g_datas[i][0],
                    "price": g_datas[i][4],
                    "delivery_service_per_person": g_datas[i][5],
                });
                strs.push(str);
            }
            await $.ajax({
                type: "PUT",
                url: '@Url.Action("UpdatePayReserve", "Reserve")',
                contentType: 'application/x-www-form-urlencoded',
                data: { strs },
                success: function (response) {
                    if (response === "Success") {
                        window.location.reload();
                    } else {
                        alert(response);
                    }
                }
            });
        });

        function DeleteReserve(reserve_no, menu) {
            $('#p_reserve').text(reserve_no);
            $('#p_menu').text(menu);
            $('#modal_confirm_delete').modal();
        }

        $('#btn_reserve_delete').on('click', async function () {
            let reserve_id = $('#p_reserve').text();
            await $.ajax({
                type: "DELETE",
                url: '@Url.Action("UpdateReserveStatus", "Reserve")',
                contentType: 'application/x-www-form-urlencoded',
                data: { reserve_id },
                success: function (response) {
                    if (response === "Success") {
                        window.location.reload();
                    } else {
                        alert(response);
                    }
                }
            });
        });

        $('#search_menu').on('keyup', async function () {
            let menu = $('#search_menu').val();
            let shop_id = g_shop_id;
            await $.ajax({
                type: "GET",
                url: '@Url.Action("SearchMenuByShop", "Reserve")',
                contentType: 'application/x-www-form-urlencoded',
                data: { shop_id, menu },
                success: function (response) {
                    let group_menus = response.groups;
                    let _group_menus = group_menus.filter(f => f.group_id !== "G99").map(m => m);
                    ShowMenu(_group_menus);
                }
            });
        });

        $('#btn_reserve_save').on('click', async function () {
            let employee_id = '@Html.Raw(Model.employee_id)';
            let shop_id = g_shop_id;
            let menu_id = g_menu_id;
            let extra = document.getElementById("extra_menu").checked;
            let note = $('#note_menu').val();
            let remark = $('#remark_menu').val();
            let strs = [];
            var str = JSON.stringify({
                "menu_id": menu_id,
                "shop_id": shop_id,
                "employee_id": employee_id,
                "note": note,
                "remark": '',
                "extra": extra
            });
            strs.push(str);
            let b_remark = false;
            for (let i = 0; i < g_extra_menu.length; i++) {
                var _str;
                if (!b_remark) {
                    _str = JSON.stringify({
                        "menu_id": g_extra_menu[i],
                        "shop_id": shop_id,
                        "employee_id": employee_id,
                        "note": '',
                        "remark": remark,
                        "extra": false
                    });
                    b_remark = true;
                } else {
                    _str = JSON.stringify({
                        "menu_id": g_extra_menu[i],
                        "shop_id": shop_id,
                        "employee_id": employee_id,
                        "note": '',
                        "remark": '',
                        "extra": false
                    });
                }
                strs.push(_str);
            }

            await $.ajax({
                type: "POST",
                url: '@Url.Action("InsertReserve", "Reserve")',
                contentType: 'application/x-www-form-urlencoded',
                data: { strs },
                success: function (response) {
                    if (response === "Success") {
                        window.location.reload();
                    } else {
                        alert(response);
                    }
                }
            });
        });

    </script>
